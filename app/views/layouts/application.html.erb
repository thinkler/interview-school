<!DOCTYPE html>
<html>
  <head>
    <title>School</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_student %>
      <h4>Logged as: <%= @current_student&.email %></h4>
      <p><%= link_to "Log out", log_out_students_path, method: :delete %> </p>
    <% end %>

    <%= link_to 'Classes', subjects_path %>
    <%= link_to 'Teachers', teachers_path %>
    <%= link_to 'Students', students_path %>
    <%= link_to 'Classrooms', classrooms_path %>
    <%= link_to 'Sections', sections_path %>
    <br>
    <%= yield %>
  </body>
</html>
